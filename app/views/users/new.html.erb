<% provide(:title, "yuya") %>

<%= form_with(model: @user, local: true, method: :post) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<%= f.label :email %>
<%= f.text_field :email %>
<br>
<%= f.label :password %>
<%= f.password_field :password  %>
<br>
<%= f.label :password_confirmation  %>
<%= f.password_field :password_confirmation  %>
<br>
<%= f.submit "Create my account" %>
<% end %>
<% flash.each do |msg_type, msg|  %>
<% msg.each do |m|  %>
<div><%= m %></div>
<% end  %>
<br>
<% end  %>