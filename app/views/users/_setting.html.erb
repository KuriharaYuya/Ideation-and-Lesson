<%=form_with(model:@user,local: true,html: {method: :patch}) do |f| %>
<table class="table user_edit_table">
    <tbody>
        <tr>
            <td><%= f.label :name %></td>
            <td class="value"><%=f.text_field :name  %></td>
        </tr>
        <tr>
            <td><%= f.label :email %></td>
            <td class="value"><%=f.email_field :email  %></td>
        </tr>
    </tbody>
</table>
<div class="user_edit_console_btns">
    <%= f.submit "変更", class: "btn btn-primary" %>
    <%= link_to "入力のリセット",edit_user_path,class: "btn btn-warning"   %>
</div>
<% end  %>