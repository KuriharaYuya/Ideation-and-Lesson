<h1><%= @verifications.count %>人がverifyしました</h1>
<br>
<div class="searched_results">
    <%@verifications.each do |verification|  %>
    <%user = verification.user  %>
    <a href="<%=user_path(user)%>" class="searched_user">
        <% if user.profile_img.present?  %>
        <img class="user_img" src="<%= user.profile_img  %>">
        <% else  %>
        <img class="user_img" src="<%= profile_initial_img %>">
        <% end %>
        <p><%= user.name  %></p>
        <% if logged_in? && current_user.following?(user)  %>
        <span class="user_following">フォロー中</span>
        <% end  %>
    </a>
    <% end  %>
</div>