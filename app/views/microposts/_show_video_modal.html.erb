<div class="modal fade micropost_video_modal" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
    tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">タイムラプス</h5>
            </div>
            <div class="modal-body">
                <video style="width: 100%;" controls src="<%= @micropost.video %>"></video>
            </div>
            <div class="modal-footer">
                <button type="button" class="close_btn btn btn-dark" data-bs-dismiss="modal">閉じる</button>
            </div>
        </div>
    </div>
</div>