<ul class="nav">
  <% if logged_in? %>
  <li class="nav-item">
    <p>Logged in with <%= @current_user.name %>'s account</p>
  </li>
  <% if !(request.path == "/users/#{current_user.id}")  %>
  <li>
    <%= link_to "Mypage", current_user  %>
  </li>
  <% end  %>
  <li class="nav-item">
    <%= link_to "User index Page", users_path %>
  </li>
  <li class="nav-item">
    <%= link_to "Log out", logout_path %>
  </li>
  <% else %>
  <li class="nav-item">
    <%= link_to "signup", signup_path %>
  </li>
  <li class="nav-item">
    <%= link_to "login", login_path %>
  </li>
  <% end %>
</ul>