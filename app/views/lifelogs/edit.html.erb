<%=form_with(model:@lifelog,local: true, html: {method: :patch}) do |f| %>
<%=f.label :title %>
<br>
<%=f.text_field :title  %>
<br>
<%=f.label :log_date, "date" %>
<br>
<%=f.date_field :log_date  %>
<%=f.hidden_field :id,value: @lifelog.id  %>
<br><br>
<%=f.submit "apply", disable_with: 'applying...'  %>
<%end  %>